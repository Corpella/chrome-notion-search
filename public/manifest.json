{
  "manifest_version": 3,
  "name": "FIXME",
  "description": "FIXME",
  "version": "1.0",
  "options_ui": {
    "page": "./options.html"
  },
  "action": {
    "default_icon": "./img/icon.png",
    "default_popup": "./search.html?popup"
  },
  "background": {
    "service_worker": "./js/background.js"
  },
  "permissions": ["storage", "commands"],
  "commands": {
    "open-search-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+N",
        "mac": "MacCtrl+Shift+N"
      },
      "description": "Open the search page"
    }
  }
}
