@import './common.pcss';

h1 {
  font-size: 30px;
}
p {
  margin: 0.5em;
}
.hide {
  display: none;
}
.highlight {
  color: green;
  font-weight: bold;
}
.status {
  font-size: 20px;
  .linked-block & {
    color: #00c600;
    font-weight: bold;
  }
  .not-linked-block & {
    color: red;
    font-weight: bold;
  }
}
