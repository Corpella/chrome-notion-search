@import url('../../../common.css');
@import url('./customProperties.css');

a {
  color: inherit;
  text-decoration: none;
}

em {
  font-style: inherit;
  font-weight: var(--font-weight-bold);
}

body {
  margin: 0;
  font-family: ui-sans-serif, -apple-system, BlinkMacSystemFont, 'Segoe UI',
    Helvetica, 'Hiragino Sans', 'Hiragino Kaku Gothic ProN', 'Hiragino Sans GB',
    'メイリオ', Meiryo, 'Apple Color Emoji', Arial, sans-serif, 'Segoe UI Emoji';
  font-size: var(--font-size-medium);
  color: var(--font-color-medium);
}

.clickable {
  cursor: pointer;
}

.link-button-container {
  width: 300px;
  height: 200px;

  button {
    margin: 25px;
  }
}

