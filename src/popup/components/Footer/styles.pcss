.footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 30px;
  padding: 0 12px;
  font-size: var(--font-size-small);
  color: var(--font-color-light);
  border-top: var(--border);
}

.total {
  font-weight: bold;
}

.icons {
  display: flex;
  align-items: center;

  img {
    width: 16px;
    margin-left: 10px;
  }
}
